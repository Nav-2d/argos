{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "codegen": {
      "dependsOn": ["start"],
      "outputs": ["src/gql/**"]
    },
    "setup": {
      "dependsOn": ["build"],
      "cache": false
    },
    "check-types": {
      "dependsOn": [],
      "outputs": []
    },
    "//#check-types": {
      "dependsOn": [],
      "outputs": []
    },
    "watch-build": {
      "persistent": true,
      "outputs": ["dist/**"]
    },
    "watch-server": {
      "persistent": true,
      "cache": false
    }
  },
  "globalDependencies": ["tsconfig.json", ".swcrc"]
}
