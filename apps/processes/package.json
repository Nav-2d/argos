{
  "name": "@argos-ci/processes",
  "version": "*",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "swc src --config-file ../../.swcrc -d dist",
    "watch-server-bs": "node --watch ./dist/bin/build-and-synchronize.js",
    "watch-server-cc": "node --watch ./dist/bin/crawl-and-capture.js",
    "watch-server-sd": "node --watch ./dist/bin/screenshot-diff.js",
    "watch-server-web": "node --watch ./dist/bin/web.js",
    "watch-build": "npm run build -- --watch --quiet",
    "watch-server": "concurrently \"npm:watch-server-*\""
  },
  "dependencies": {
    "@argos-ci/build": "*",
    "@argos-ci/build-notification": "*",
    "@argos-ci/capture": "*",
    "@argos-ci/config": "*",
    "@argos-ci/crawl": "*",
    "@argos-ci/job-core": "*",
    "@argos-ci/logger": "*",
    "@argos-ci/screenshot-diff": "*",
    "@argos-ci/sentry-node": "*",
    "@argos-ci/synchronize": "*",
    "@argos-ci/web": "*",
    "@sentry/node": "^7.48.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
