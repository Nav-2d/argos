{
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test-watch": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --watch",
    "e2e:setup": "NODE_ENV=test npm run -w @argos-ci/database db:truncate && NODE_ENV=test npm run -w @argos-ci/database db:seed",
    "e2e:start": "NODE_ENV=test playwright test",
    "setup": "turbo run setup",
    "procfile": "heroku local -f Procfile.dev -p 4001",
    "webhook-proxy": "NODE_TLS_REJECT_UNAUTHORIZED=0 smee --url https://smee.io/SmH89Dx2HZ89wK7T --target https://api.argos-ci.dev:4001/github/event-handler",
    "stripe-webhook-proxy": "stripe listen --forward-to https://api.argos-ci.dev:4001/stripe/event-handler",
    "lint": "eslint .",
    "check-types": "npx tsc --noEmit",
    "format": "prettier --write .",
    "heroku-postbuild": "npm run build"
  },
  "repository": "github:argos-ci/argos",
  "engines": {
    "node": "18"
  },
  "devDependencies": {
    "@argos-ci/cli": "latest",
    "@argos-ci/config": "*",
    "@argos-ci/playwright": "^0.0.4",
    "@jest/globals": "^29.5.0",
    "@playwright/test": "^1.32.3",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.51",
    "@swc/jest": "^0.2.26",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "clsx": "^1.2.1",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "smee-client": "^1.2.3",
    "turbo": "^1.9.1",
    "typescript": "^5.0.4"
  },
  "volta": {
    "node": "18.16.0"
  }
}
