{
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run -w @argos-ci/app dev",
    "build": "npm run -ws --if-present build",
    "test": "jest --runInBand",
    "e2e:start": "playwright test",
    "setup": "npm run -ws --if-present setup",
    "procfile": "heroku local -f Procfile.dev -p 4001",
    "webhook-proxy": "NODE_TLS_REJECT_UNAUTHORIZED=0 smee --url https://smee.io/SmH89Dx2HZ89wK7T --target https://api.argos-ci.dev:4001/github/event-handler",
    "lint": "eslint .",
    "format": "prettier --write .",
    "heroku-postbuild": "npm run build"
  },
  "repository": "github:argos-ci/argos",
  "engines": {
    "node": "18"
  },
  "devDependencies": {
    "@argos-ci/cli": "latest",
    "@playwright/test": "^1.27.1",
    "@swc/jest": "^0.2.22",
    "eslint": "^8.21.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.2",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "smee-client": "^1.2.3"
  }
}
